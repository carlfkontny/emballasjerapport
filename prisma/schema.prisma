generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "sqlserver"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SalesData {
  id            Int      @id @default(autoincrement())
  saleDate      DateTime
  category      String // "Matbeholder" or "Drikkebegre"
  plasticType   String // "Helt av plast" or "Delvis av plast"
  numberSold    Int
  tonsOfPlastic Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([saleDate])
  @@index([category])
  @@index([plasticType])
}
